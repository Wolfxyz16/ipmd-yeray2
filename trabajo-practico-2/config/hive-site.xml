<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Directorio donde se almacenan los datos de HDFS -->
    <property>
        <name>dfs.namenode.name.dir</name>
        <value>/hadoop/dfs/name</value>
    </property>

    <!-- Directorio donde se almacenan los bloques en cada DataNode -->
    <property>
        <name>dfs.datanode.data.dir</name>
        <value>/hadoop/dfs/data</value>
    </property>

    <!-- Factor de replicación (ajústalo según tu número de DataNodes) -->
    <property>
        <name>dfs.replication</name>
        <value>1</value>
    </property>

</configuration>
